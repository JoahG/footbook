
     
    
      
        <h4>Statuses</h4>
        <% @statuses.each do |status| %>
            <div class="status">
         <div class="row">
          <div class="span1">
        <%= image_tag status.user.gravatar_url %>
      </div>
        <div class="span7">
      
           <h5><%= status.user.full_name %></h5>
           <p><%= status.content %></p>
            <div class="meta">
              <%= link_to "Posted " + time_ago_in_words(status.created_at) + " ago", status %>
              <span class="admin">
                <%= link_to 'Edit', edit_status_path(status) %>
               <%= link_to 'Delete', status, method: :delete, data: { confirm: 'Are you sure?' } %>
              </span>
           </div>
        </div>
      </div>
        </div>
      <% end %>
 