<div class="row">
  <div class="span6">
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'well form-horizontal'}) do |f| %>
      <fieldset>
        <legend>Log In</legend>
        <%= f.input :email %>
        <%= f.input :password %>
        <% if devise_mapping.rememberable? -%>
          <%= f.input :remember_me, as: :boolean %>
        <% end -%>
        <div class="form-actions">
          <%= f.button :submit, 'Log In', class: 'btn-success' %>
        </div>
      </fieldset>
    <% end %>
  </div>
  <div class="span6">
    <div class="well">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
